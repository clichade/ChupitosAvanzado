<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/rustic"
    tools:context="com.example.trjano.chupitos.Inicio_fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/tvTipos"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50dp"
            android:text="@string/Tipos"
            android:layout_marginBottom="10dp"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btSuave"
            android:text="Suave"
            android:textSize="40dp"
            android:fontFamily="casual"
            android:background="@drawable/basic_gradient"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>



        <Button
            android:id="@+id/btExotico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exotico"
            android:textSize="40dp"
            android:fontFamily="casual"
            android:background="@drawable/basic_gradient"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btA_Matar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A MATAR"
            android:textSize="70dp"
            android:fontFamily="cursive"
            android:background="@drawable/aggresive_style"
            android:textAlignment="center"/>




    </LinearLayout>
</RelativeLayout>
